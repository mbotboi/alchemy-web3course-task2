{
  "name": "token-checks",
  "version": "1.0.0",
  "description": "Perform various checks against tokens on-chain with 0 gas",
  "main": "hardhat.config.js",
  "scripts": {
    "postinstall": "npx hardhat compile",
    "token": "npx hardhat token --network mainnet",
    "token-override": "npx hardhat token-override --network mainnet",
    "flash": "npx hardhat flash --network mainnet",
    "test": "npx hardhat test",
    "lint:check": "npx eslint '**/*.{js,ts}' && npx prettier '**/*.{json,sol,md}' --check && npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx eslint '**/*.{js,ts}' --fix && npx prettier --write '**/*.{json,sol,md}' --write && npx solhint 'contracts/**/*.sol' --fix"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "mb",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@rari-capital/solmate": "^5.9.0",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.39",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.9.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "typechain": "^5.2.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@openzeppelin/contracts": "^4.6.0",
    "implement-js": "^0.0.31"
  }
}
